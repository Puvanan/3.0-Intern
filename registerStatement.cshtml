        $('#secondNext').on('click', function () {

            $('#secondPage').attr('hidden', true);
            $('#firstPage').attr('hidden', true);
            $('#thirdPage').attr('hidden', true);
            $('#fourthPage').attr('hidden', false);
            $('#fifthPage').attr('hidden', true);

        });

        $("#thirdNext").click(function () {
            Swal.fire({
                width: '650px',
                title: 'Confirm Registration of E-Statement?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d64354',
                cancelButtonColor: '#212529',
                confirmButtonText: 'Confirm'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Your Registration of E-Statement has been submitted!',
                        icon: 'success',
                        customClass: {
                            title: 'alertFontStyle'
                        }
                    }).then(function () {
                        $('#firstPage').prop('hidden', true);
                        $('#secondPage').prop('hidden', true);
                        $('#thirdPage').prop('hidden', false);
                        $('#fourthPage').prop('hidden', true);
                        $('#fifthPage').prop('hidden', true);
                    });
                }
            });
        });

        $('#confirmBtn').on('click', function () {
            Swal.fire({
                title: 'Do you want to delete the account?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Submit',
                allowOutsideClick: false,
                customClass: {
                    title: 'alertFontStyle'
                }
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        title: 'Your Delete Request has been submitted!',
                        icon: 'success',
                        customClass: {
                            title: 'alertFontStyle'
                        }
                    }).then(function () {
                        $('#firstPage').prop('hidden', true);
                        $('#secondPage').prop('hidden', true);
                        $('#thirdPage').prop('hidden', true);
                        $('#fourthPage').prop('hidden', true);
                        $('#fifthPage').prop('hidden', false);
                    });
                }
            })
        });

        $('#fourthNext').on('click', function () {

            $('#secondPage').attr('hidden', true);
            $('#firstPage').attr('hidden', false);
            $('#thirdPage').attr('hidden', true);
            $('#fourthPage').attr('hidden', true);
            $('#fifthPage').attr('hidden', true);

        });

        $('#fifthNext').on('click', function () {

            $('#secondPage').attr('hidden', true);
            $('#firstPage').attr('hidden', false);
            $('#thirdPage').attr('hidden', true);
            $('#fourthPage').attr('hidden', true);
            $('#fifthPage').attr('hidden', true);

        });

    });

    function checkAgreement() {
        if ($("#eStatementCheckBox").is(':checked')) {
            $("#thirdNext").prop('disabled', false);
        } else {
            $("#thirdNext").prop('disabled', true);
        }
    }

</script>
