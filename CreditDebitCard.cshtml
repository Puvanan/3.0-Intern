                            </div>
                        </div>
                    </div>


                    <div class="row my-5">
                        <div class="col-12">
                            <a class="btn btn-dark float-start" href="@Url.Action("CardSettings", "Home" )">
                                Back
                            </a>
                            <a class="btn btn-outline-primary btnReset float-end float-sm-none float-lg-end float-xxl-none ms-2"> Clear </a>

                            <a id="thirdNext" class="btn btn-primary col-12 col-sm-3 mt-2 mt-sm-0 float-sm-end col-lg-12 mt-lg-2 col-xxl-3 mt-xxl-0"> Submit </a>

                        </div>
                    </div>
                </div>
                <div hidden id="fourthPage" class="col-12 col-lg-10 mt-3">

