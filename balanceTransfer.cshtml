        function changeDeclarationLayout() {
            if (window.innerWidth < 992) {
                $('.declarationText').appendTo('#declarationAccordion .accordion-body');
                $('#declarationCheckboxCon').find('label').text('I Agree');
                $('#declarationCheckboxCon').appendTo('#declarationAccordion .accordion-body');
