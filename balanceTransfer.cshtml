        function validate() {
            var thisValue = "";
            var strResult = "";

            // Start Date
            thisValue = $("#selectCard").val();
            strResult = onInputValidate(thisValue);
            $('#selectCard').next('.text-danger').html(strResult);
            if (strResult == "") {
                return true;
            } else {
                return false;
            }
        }

        function onInputValidate(thisValue) {
            if (thisValue == null || thisValue == "" || thisValue == "Please select") {
                return "<span>This field is required.</span>";
            }
            return "";
        }

