                $('#declarationCheckboxCon').appendTo('.declaration-lg');
                $('.declarationText').appendTo('.declaration-lg');


            }
        }

        $("#declarationCheckbox").change(function () {
            if ($(this).is(":checked")) {
                $("#secondNext").removeClass('disabled');
            } else {
                $("#secondNext").addClass('disabled');
            }
        });
        $("#addTransferRow").click(function () {
            var rowCount = $("#balanceTransferTable >tbody >tr").length;
            checkAddTransferBtn(rowCount, true);
            if (rowCount < 5) {

                var clonedEl = $(".balanceTransferTableRow:last").clone();
                $(clonedEl).find('input').val('');
                $(clonedEl).children().find('.deleteTableRow').removeClass('d-none');
                $(clonedEl).insertAfter(".balanceTransferTableRow:last");
            }
        });

        function checkAddTransferBtn(rowLength, adding) {
            if (adding) {
                if (rowLength < 4) {
                    $("#addTransferRow").attr('disabled', false);
                } else {
                    $("#addTransferRow").attr('disabled', true);
                }
            } else {
                if (rowLength < 5) {
                    $("#addTransferRow").attr('disabled', false);
                } else {
                    $("#addTransferRow").attr('disabled', true);
                }
            }

        }

        $(document).on('click', '.deleteTableRow', function () {
            $(this).parents(".balanceTransferTableRow").remove();
            var rowCount = $("#balanceTransferTable >tbody >tr").length;
            checkAddTransferBtn(rowCount, false);
        });


        $('.mobileNav').each(function () {
            $(this).removeClass('active');
        });

